{% doc %}
  @prompt
    the same section section as the banner image section just not taking the full width i want it to have margin on the sides and also rounded corners
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-banner-container-{{ ai_gen_id }} {
    width: 100%;
    padding: 0 {{ block.settings.side_margin }}px;
    box-sizing: border-box;
  }

  .ai-banner-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height }}px;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-banner-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-banner-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  .ai-banner-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: {{ block.settings.text_alignment }};
    z-index: 2;
    width: 90%;
    max-width: 800px;
  }

  .ai-banner-heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-banner-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px;
    line-height: 1.4;
  }

  .ai-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: background-color 0.3s ease;
  }

  .ai-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-banner-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.banner_height_mobile }}px;
    }

    .ai-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-banner-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-banner-button-{{ ai_gen_id }} {
      padding: 12px 24px;
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-banner-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-banner-wrapper-{{ ai_gen_id }}">
    {% if block.settings.banner_image %}
      <img
        src="{{ block.settings.banner_image | image_url: width: 2000 }}"
        alt="{{ block.settings.banner_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.banner_image.width }}"
        height="{{ block.settings.banner_image.height }}"
        class="ai-banner-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-banner-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-banner-empty-state-{{ ai_gen_id }}">
          Next, add an image
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-banner-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-banner-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-banner-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <p class="ai-banner-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-banner-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner with margins",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner image"
